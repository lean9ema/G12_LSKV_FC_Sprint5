<!DOCTYPE html>
<html lang="es">
    <%- include( '../partials/head') %>
    <body>
        <%- include('../partials/header') %>
        <main class="charger">
            <div>
                <form action="/products/" method="POST" enctype="multipart/form-data">
                    <fieldset class="form-prod-char">
                        <legend class="legend-formulario">Crear producto</legend>
                        
                        <label for="name">Nombre:
                            <input type="text" id="name" name="name" class="name" required>
                        </label>
                        
                        <label for="price">Precio:
                            <input type="number" name="price" id="price" class="price" required>
                        </label>
                        
                        <label for="category">Categoria: 
                            <select name="category" id="category">
                                <% categories.forEach(category => { %>
                                    <option value="<%= category %>"><%= category %></option>
                                <% }) %>
                            </select>
                         </label>
                        
                        <label for="color">Colores:
                            <div class="color">
                                <% colours.forEach(colour => { %>
                                    <div class="check-c-s">
                                        <input class="chk" type="checkbox" value="<%=colour.cod %>" name="color" id="<%=colour.cod %>">
                                        <label class="lbl" for = "<%=colour.cod %>">
                                            <img src = "/images/colores/<%= colour.cod %>.jpg"">
                                        </label> 
                                    </div>    
                                <% }) %>
                            </div>
                        </label>
                        
                        <label>Talles:
                            <div class="size">
                                <% sizes.forEach(size => { %>
                                    <div class="check-size">
                                        <input class="chk"type="checkbox" value="<%= size %>"  name="sizes" id ="<%= size %>">
                                        <label class="lbl" for = "<%= size %>"><%= size %></label>
                                    </div>
                                <% }) %> 
                            </div>
                        </label>

                        <label for="image"> Ingrese una imagen:
                            <input type="file" id="image" name="image" required>
                        </label>
                        
                        <label for="images">Imagenes secundarias:
                            <input type="file" name="images" id="images" require multiple>
                        </label>
                            
                         <label for="description">Descripci√≥n:
                            <textarea name="description" id="description" cols="30" rows="5" class="description"></textarea>
                         </label> 

                        <div class="bt">
                            <button type="submit">Crear</button>
                        </div>

                    </fieldset>
                </form>
            </div>
        </main>
        <%- include('../partials/footer') %> 
    </body>  